<!-- MOVIE CARD -->


<% @list.movies.each do |movie| %>
    <div class="card-wrapper">
      <%= image_tag movie.poster_url, alt: "movie background", width: 350, height: 200 %>
      <div class= "card-info">
        <h2> <%= movie.title %>  </h2>
        <p> <%= movie.overview %> </p>
      </div>
     </div>
  <% end %>
